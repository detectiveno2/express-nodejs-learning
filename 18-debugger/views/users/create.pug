extend ../../layouts/general.layout.pug

block content
    a(href="/users", class="btn btn-outline-primary mb-3") Back
    form(action="/users/create", method="post")
        if errors
            each error in errors
                .alert.alert-danger= error
        label(for="#name") Name: 
        input(name="name", class="form-control mb-2", type="text", value=values ? values.name : '')
        label(for="phone") Phone: 
        input(name="phone", class="form-control", type="number", value=values ? values.phone : '')
        button(class="btn btn-success mt-3") Create