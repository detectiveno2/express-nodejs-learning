extend ../../layouts/general.layout.pug

block content
    form(action="/auth/login", method="post")
        if error
            .alert.alert-danger= error
        input(type="hidden", name="_csrf", value=csrfToken)
        label(for="email") Email:
        input#email(name="email", class="form-control mb-2", type="text", value=values ? values.email : '')
        label(for="password") Password:
        input#password(name="password", class="form-control", type="password")
        button(class="btn btn-primary mt-3") Login