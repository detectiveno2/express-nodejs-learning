extend ../../layouts/general.layout.pug

block content
    a(href="/users", class="btn btn-outline-primary mb-3") Back
    form(action="/users/create", method="post", enctype="multipart/form-data")
        if errors
            each error in errors
                .alert.alert-danger= error
        .form-group
            label(for="name") Name: 
            input#name(name="name", class="form-control mb-2", type="text", value=values ? values.name : '')
        .form-group
            label(for="phone") Phone: 
            input#phone(name="phone", class="form-control", type="text", value=values ? values.phone : '')
        .form-group
            label(for="avatar") Avatar: 
            input#avatar(name="avatar", class="form-control-file", type="file")
        button(class="btn btn-success mt-3") Create